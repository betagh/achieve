<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">

<h4>以下の内容で、送信する。</h4>

<%= form_for(@contact) do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.hidden_field :email %>
  <p>タイトル:<%= @contact.title %></p>
  <p>本文:<%= @contact.content %></p>
  <p>メール:<%= @contact.email %></p>
  <%= f.submit "登録",class: 'btn btn-primary btn-block' %>
<% end %>

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
  <%= f.hidden_field :title %>
  <%= f.hidden_field :content %>
  <%= f.hidden_field :email %>
  <%= f.submit "もどる", name: 'back', class: 'btn btn-default btn-block' %>
<% end %>

  </div>
</div>